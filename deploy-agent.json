{
    "providers": [
        {
            "name": "sardines-service-provider-http",
            "code": {
                "locationType": "npm"
            },
            "providerSettings": {
                "host": "0.0.0.0",
                "port": 8080,
                "protocol": "http",
                "root": "/",
                "bodyParser": {
                    "formLimit": "10m",
                    "jsonLimit": "10m",
                    "textLimit": "10m"
                },
                "safeGuard": true,
                "cors": {
                    "credentials": true
                },
                "syslog": true,
                "public": {
                    "protocol": "http",
                    "host": "10.183.197.108",
                    "root": "/",
                    "port": 8080,
                    "driver": "sardines-service-driver-http"
                }
            },
            "applicationSettings": [
                {
                    "application": "sardines",
                    "commonSettings": {
                        "root": "/"
                    },
                    "serviceSettings": [
                        {
                            "module": "/repository",
                            "name": "signIn",
                            "settings": {
                                "method": "post"
                            }
                        },
                        {
                            "module": "/repository",
